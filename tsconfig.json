{
  "compileOnSave": true,
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es2015",
      "dom",
      "es6"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": false,
    "declaration": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "rootDir": "src",
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
  "include": [
    "./src/**/*.ts",
    "src/**/*.json"
  ]
}